{
  "zig.version": "zig",
  "zig.zls.enabled": "on",
  "zig.zls.enableBuildOnSave": true,
  "zig.zls.additionalOptions": {
      "zig.zls.enableAutoFix": true,
  },
  "[zig]": {
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "editor.semanticTokenColorCustomizations": {
    "rules": {
      "*.deprecated": {
        "strikethrough": true
      }
    }
  }
}
